{
  "name": "@rajrai/mui-theme-manager",
  "version": "1.0.0",
  "description": "A lightweight React component library for creating, editing, and managing MUI v6 theme presets in real time.",
  "author": "Raj Rai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajrai/mui-theme-manager.git"
  },
  "homepage": "https://github.com/rajrai/mui-theme-manager",
  "keywords": [
    "mui",
    "material-ui",
    "theme",
    "react",
    "theme-editor",
    "mui-theme-manager"
  ],
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "cross-env BUILD_TARGET=dev NODE_ENV=development vite --config vite.config.ts",
    "build": "cross-env BUILD_TARGET=lib NODE_ENV=production vite build --config vite.config.ts",
    "build:demo": "cross-env BUILD_TARGET=lib NODE_ENV=production vite build --config vite.config.ts && cross-env BUILD_TARGET=demo NODE_ENV=production vite build --config vite.config.ts",
    "demo": "cross-env BUILD_TARGET=demo NODE_ENV=development vite --config vite.config.ts"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@mui/icons-material": "^6.0.0",
    "@mui/material": "^6.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "cross-env": "^10.1.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.2"
  }
}
